
data segment
arr dw 1111h, 2222h, 3333h, 4444h, 5555h, 6666h, 7777h, 8888h, 9999h, 0001h
sum dw 0000h
carry db 00h
data ends

code segment
assume cs:code,ds:data
start:
mov ax, data
mov ds, ax

lea si, arr
mov cx, 10
mov ax, 0h
mov dl, 0h
clc

back:
mov bl, [si]
add ax, bx
inc si
dec cx
jnz back 

mov [di], ax

mov ah,4ch
int 21h

code ends
end start
