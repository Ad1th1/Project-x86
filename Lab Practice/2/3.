; Exchange two array values

data segment

arr1 db 01h, 02h, 03h, 04h, 05h, 06h, 07h, 08h, 09h, 10h
arr2 db 11h, 12h, 13h, 14h, 15h, 16h, 17h, 18h, 19h, 20h
count dw 000ah

data ends

code segment
assume cs:code,ds:data
start:
mov ax, data
mov ds, ax

lea si arr1
lea di, arr2
mov cx, count

back:
mov al, [si]
xchg [di], al
mov [si], al
inc si
inc di
loop back

mov ah,4ch
int 21h

code ends
end start
